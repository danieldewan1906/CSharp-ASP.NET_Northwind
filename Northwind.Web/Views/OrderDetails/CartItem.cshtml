@model List<Northwind.Contracts.Dto.OrderDetail.OrderDetailDto>

@using (Html.BeginForm("CheckOut"
, "OrderDetails"
, FormMethod.Post))
{
    <section>
        <div class="container">
            <div class="row d-flex h-100">
                <div class="col">
                    <p><span class="h2">Shopping Cart </span> </p>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        @Html.HiddenFor(Model => Model[i].ProductId);
                        @Html.HiddenFor(Model => Model[i].OrderId);
                        @Html.HiddenFor(Model => Model[i].UnitPrice);
                        @Html.HiddenFor(Model => Model[i].Order.OrderDate);
                        @Html.HiddenFor(Model => Model[i].Order.RequiredDate);
                        @*@Html.HiddenFor(Model => Model[i].Product.ProductName);*@
                        <div class="card mb-4">
                            <div class="card-body p-4">

                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <img src="@Url.Content("~/Resources/images/" + Model[i].Product.ProductPhotos.FirstOrDefault().PhotoFilename)"
                                     class="img-fluid" alt="Generic placeholder image">
                                    </div>
                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Name</p>
                                            <p class="lead fw-normal mb-0">@Html.DisplayFor(Model => Model[i].Product.ProductName)</p>
                                        </div>
                                    </div>
                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Quantity</p>
                                            @Html.TextBoxFor(Model => Model[i].Quantity, new{@type="number", @class="form-control"})
                                            @*<p class="lead fw-normal mb-0">@Html.DisplayFor(Model => Model[i].Quantity)</p>*@
                                        </div>
                                    </div>
                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Price</p>
                                            <p class="lead fw-normal mb-0">@Html.DisplayFor(Model => Model[i].Product.UnitPrice)</p>
                                        </div>
                                    </div>
                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Total</p>
                                            <p class="lead fw-normal mb-0">@Html.DisplayFor(Model => Model[i].UnitPrice)</p>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                    <div class="card mb-5">
                        <div class="card-body p-4">

                            <div class="float-end">
                                <p class="mb-0 me-5 d-flex align-items-center">
                                    <span class="small text-muted me-2">Order total:</span> <span class="lead fw-normal">$799</span>
                                </p>
                            </div>

                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <a asp-controller="ProductOnSale" asp-action="Index">
                            <input type="button" class="btn btn-light btn-lg me-2" value="Continue Shopping">
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">Checkout</button>
                    </div>

                </div>
            </div>
        </div>
    </section>
}
